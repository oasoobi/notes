---
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
  </nav>
</header>
<style>
  header {
    width: 100%;
    user-select: none;
    display: flex;
    justify-items: center;
    height: 2.5em;
    margin: 0;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
  nav {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 1em 1em 1em 1em;
    h2 {
      margin: 0;
      font-size: 1em;
      a {
        text-decoration: none;
        color: rgb(var(--black));
      }
    }
  }
</style>